<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="basemode" parent="android:TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="nightmode" parent="basemode">
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFAAFF</item>
       </style>


    <style name="daymode" parent="basemode" >
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="daymode.pink">
        <item name="android:background">#FF00FF</item>
        <item name="android:textColor">#00FF00</item>
    </style>
    </resources>